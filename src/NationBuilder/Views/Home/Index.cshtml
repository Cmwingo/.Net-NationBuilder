@{
    ViewData["Title"] = "Home Page";
}
@model NationBuilder.Models.Nation

<form asp-action="Index" asp-controller="Home">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="@Model.Name" type="text" />
    </div>

    <div class="form-group">
        <label for="Capital">Capital</label>
        <input asp-for="@Model.Capital" type="text" />
    </div>

    <div class="form-group">
        <label for="Government">Government</label>
        <select asp-for="@Model.Government">
            <option value="democracy">Democracy</option>
            <option value="monarchy">Monarchy</option>
            <option value="communism">Communism</option>
        </select>
    </div>

    <div class="form-group">
        <p>If you are a dirty Communist your economy must be planned!</p>
        <label for="Economy">Economy</label>
        <select asp-for="@Model.Economy">
            <option value="capitalism">Capitalism</option>
            <option value="planned(Socialism)">Planned(Socialism</option>
            <option value="barter">Barter</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Geography">Geography</label>
        <select asp-for="@Model.Geography">
            <option value="plains">Plains</option>
            <option value="desert">Desert</option>
            <option value="forest">Forest</option>
            <option value="coastal">Coastal</option>
            <option value="mountains">Mountains</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Religion">Religion</label>
        <select asp-for="@Model.Religion">
            <option value="monotheism">Monotheism</option>
            <option value="polytheism">Polytheism</option>
            <option value="atheism">Atheism</option>
        </select>
    </div>

    <button type="submit">Go</button>
</form>
    
